
st=" "+input("Enter the string")
lmax=0
for i in range(0,len(st)):
    if st[i]==" ":
        l=st.find(" ",(i+1),len(st))-i-1
        if l>lmax:
            str=st[(i+1):(i+1+l)]
            lmax=l
print("Longest word contains",lmax,"letters")
print("Longest word in the sentence \"",st,"\"is",str)
